---
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import BuyMeACoffee from '../components/BuyMeACoffee.astro';
import Header from '../components/Header.astro';
const { title = 'CurioScience', lang = 'es' } = Astro.props;
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="CurioScience - Divulgación científica diaria" />
    <title>{title}</title>
    <link rel="stylesheet" href="/fonts.css" />
  </head>
  <body class="bg-gray-50 text-gray-900 font-atkinson pt-20">
    <Header />

    <main class="max-w-5xl mx-auto px-4 py-6">
      <slot />
    </main>

    <footer class="bg-primary text-white py-6 mt-12">
      <div class="max-w-5xl mx-auto flex flex-col md:flex-row justify-between items-center px-4">
        <p class="mb-2 md:mb-0">&copy; 2025 CurioScience. Todos los derechos reservados.</p>
        <div class="flex space-x-4">
          <a href="#" aria-label="Twitter">
            <img src="/icons/twitter.svg" alt="Twitter" class="h-5" />
          </a>
          <a href="#" aria-label="Instagram">
            <img src="/icons/instagram.svg" alt="Instagram" class="h-5" />
          </a>
          <a href="#" aria-label="TikTok">
            <img src="/icons/tiktok.svg" alt="TikTok" class="h-5" />
          </a>
        </div>
      </div>
      <div class="max-w-5xl mx-auto mt-4 px-4">
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-7362740372032488"
             data-ad-slot="7362740372032488"
             data-ad-format="auto"
             data-full-width-responsive="true"></ins>
        <script>
          (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
      </div>
    </footer>
  </body>
</html>
