---
const { tags = [] } = Astro.props;
---

<div class="mt-6">
  <h3 class="text-sm font-medium text-gray-700 mb-2">Etiquetas populares</h3>
  <div class="flex flex-wrap gap-2">
    {tags.map(tag => (
      <span class="px-3 py-1 bg-gray-100 rounded-full text-xs text-gray-700 cursor-pointer hover:bg-blue-100"
        on:click={() => {
          const articles = document.querySelectorAll('[data-article-tags]');
          articles.forEach(el => {
            const tagList = el.getAttribute('data-article-tags') || '';
            el.style.display = tagList.includes(tag) ? '' : 'none';
          });
        }}>
        #{tag}
      </span>
    ))}
  </div>
</div>