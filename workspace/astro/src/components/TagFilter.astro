---
const { tags = [] } = Astro.props;
---

<div class="mb-6">
  <h2 class="font-semibold mb-2">🏷️ Etiquetas</h2>
  <ul class="flex flex-wrap gap-2 text-sm">
    {tags.map(tag => (
      <li>
        <a href={`?tag=${tag}`} class="px-2 py-1 border rounded hover:bg-gray-100">#{tag}</a>
      </li>
    ))}
  </ul>
</div>