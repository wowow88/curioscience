---
const { categories = [] } = Astro.props;
---

<div class="mt-4">
  <h3 class="text-sm font-medium text-gray-700 mb-2">Filtrar por categor√≠a</h3>
  <div class="space-y-1">
    {categories.map(category => (
      <a
        href={`#`}
        class="block text-sm px-3 py-1 rounded hover:bg-blue-100 text-blue-700"
        on:click={(e) => {
          e.preventDefault();
          const articles = document.querySelectorAll('[data-article-category]');
          articles.forEach(el => {
            el.style.display = category === 'all' || el.getAttribute('data-article-category') === category ? '' : 'none';
          });
        }}
      >
        {category}
      </a>
    ))}
  </div>
</div>